				     <include name="validationOfFavourites"></include>
			   </methods>
			 </class>
		</classes>
	</test>
	
	<test name="FirefoxTest" thread-count="2" parallel="classes">
		<parameter name="browser" value="Firefox" />
		<classes>
			<class name="test.LoginSignUpFacebook"/>
			<class name="test.CreateAccountTestClass"/>
			<class name="test.FriendPageTestClass"/>
		</classes>
